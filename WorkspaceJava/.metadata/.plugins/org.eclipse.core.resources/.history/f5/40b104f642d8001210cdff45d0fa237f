	protected void btnCrearAlumnoActionPerformed (ActionEvent o) throws SQLException, IOException{
		
		
			
			//SELECT IDCURSO FROM CURSOS WHERE NOM = NOM
			
			/*
			 
			 if (escorrecto) {
			 	
