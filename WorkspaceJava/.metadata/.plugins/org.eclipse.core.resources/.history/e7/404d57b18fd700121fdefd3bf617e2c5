	protected void btnCrearCursosActionPerformed (ActionEvent o){
		try{
			
		
		
		String sql="INSERT INTO cursos (cod_curso, nombredeporte, hora_inicio,fecha_inicio,nivel,plazas) VALUES" + "(?,?,?,?,?,?)";//Consulta preparada para introducir los valores posteriormente
		String   cod_curso, nombredeporte, hora_inicio, nivel, dnimonitor;
		String plazas, fecha_inicio;
		cod_curso=textFieldcodcurso.getText();
		System.out.println(cod_curso);
		nombredeporte=textFieldDeporte.getText();	
		
		if (nombredeporte.length()==0) {
			
		nombredeporte = null;	
		}
		
		
		//nombredeporte=textFieldDeporte.getText();
		//System.out.println(nombredeporte);
		hora_inicio=textFieldhora_inicio.getText();
		System.out.println(hora_inicio);
		fecha_inicio=textFieldFecha.getText();
		System.out.println(fecha_inicio);
		nivel=textFieldNivel.getText();
		System.out.println(nivel);
		//dnimonitor=textFieldDNIMONITOR.getText();
		
		/*if (dnimonitor.length()==0) {
			
			dnimonitor = null;	
			}
		*/
		//System.out.println(dnimonitor);
		plazas=textFieldplazaas.getText();
		System.out.println(plazas);
		
		
		PreparedStatement prest=(PreparedStatement) conx.getConectado().prepareStatement(sql);
		
		prest.setString(1, cod_curso);
	
		prest.setString(2, nombredeporte);
		prest.setString(3, hora_inicio);
		prest.setString(4, fecha_inicio);
		prest.setString(5, nivel);
		//prest.setString(6, dnimonitor);
		prest.setString(6, plazas);
	
		
		if(cod_curso.length()<=0 || plazas.length()<=0){
			JOptionPane.showMessageDialog(null, "El código del curso  y las plazas son obligatorias");
		}else{
			prest.execute();
			JOptionPane.showMessageDialog(null, "Curso creado con éxito");
			dispose();
		}
		
		}catch(SQLException exSql){
			exSql.printStackTrace();
			JOptionPane.showMessageDialog(null, "Error, posibles causas: \n - Código de curso existente introducido  \n- No existe un deporte o dni de usuario introducido \n- Asegúrese de tener el host activo");
		}catch(Exception e){
			e.printStackTrace();
		    JOptionPane.showMessageDialog(null, "Error en la conexión con la base de datos","Error",JOptionPane.ERROR_MESSAGE);
	}
		
	}
}
